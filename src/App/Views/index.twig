{% extends "/template.twig" %}
{% set titulo_pagina = 'Produtos' %}

{% block conteudo %}
<div class="container bloco">
    <div class="bloco_header text-center">
        <a href="{{ path('produto_add') }}" class="btn btn-success" style="float:left">
            <i class="fa fa-plus"></i> Novo Produto
        </a>
        <h3>Lista de Produtos</h3>
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Valor</th>
            <th>Opções</th>
        </tr>
        </thead>
        <tbody>
        {% for produto in produtos %}
        <tr>
            <td>{{ produto.id_produto }}</td>
            <td>{{ produto.nome }}</td>
            <td>{{ produto.descricao }}</td>
            <td>{{ produto.valor }}</td>
            <td>
                <a href="{{ path('produto_alter') }}?id_produto={{ produto.id_produto }}" title="Alterar"><i class="button fa fa-pencil"></i></a>
                <a href="{{ path('produto_delete') }}?id_produto={{ produto.id_produto }}" title="Excluir"><i class="button fa fa-remove"></i></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}