{% extends "/template.twig" %}
{% set titulo_pagina = 'Produtos' %}
{% if dados is defined %}
{%  set action = 'produto_update' %}
{% else %}
{%  set action = 'produto_insert' %}
{% endif %}

{% block scripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-maskmoney/3.0.2/jquery.maskMoney.min.js"></script>
    <script>
        $(function() {
            $('#valor').maskMoney();
        })
    </script>
{% endblock %}

{% block conteudo %}
<div class="container bloco">
    <div class="bloco_header text-center">
        <h3>Adicionar Produto</h3>
    </div>
    <form action="{{ path(action) }}" method="post">
        <input type="hidden" id="id_produto" name="id_produto" value="{{ dados.id_produto|default }}"/>
        <div class="form-group">
            <label for="nome">Nome*</label>
            <input type="text" class="form-control" id="nome" name="nome" value="{{ dados.nome|default }}">
        </div>
        <div class="form-group">
            <label for="valor">Valor*</label>
            <input type="text" class="form-control" id="valor" name="valor"  value="{{ dados.valor|default }}">
        </div>
        <div class="form-group">
            <label for="descricao">Descrição*</label>
            <textarea name="descricao" id="descricao" class="form-control" cols="30" rows="10">{{ dados.descricao|default }}</textarea>
        </div>
        <input type="submit" class="btn btn-lg btn-block btn-primary" value="Enviar" />
    </form>
</div>
{% endblock %}